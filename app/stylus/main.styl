/* global styling */
*
  boxsizing(border-box)

html
  font-family: 'Source Sans Pro', sans-serif
  overflow-y: scroll

html
button
input
select
textarea 
  color: $black

a,
a:visited,
a:hover
  text-decoration: none
  
body
  background: $paper
  color: $black
  font-size: 1em
  line-height: 1.4
  
#app
  width: 100%
  position: relative
  max-width:80em
  margin:0 auto

.subpage
  padding:1em
  .subpage-content
    background:white
    box-shadow:0 1px 1px rgba(0,0,0,.1)
    padding:1em
    


