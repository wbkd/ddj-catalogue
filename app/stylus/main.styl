/* global styling */

html
  font-family: 'Source Sans Pro', sans-serif
  overflow-y: scroll

html
button
input
select
textarea 
  color: $black

a,
a:visited,
a:hover
  color:$grey
  text-decoration: none

form
  margin: 1em 0
  
  button
    margin-top:1em

label
  color:$black

input,
textarea
  font-family: 'Source Sans Pro', sans-serif
  border:1px solid $lightgrey
  padding:.5em 1em
  width:100%
  color: $grey
  margin:.3em 0  
  box-shadow:inset 0 1px 2px rgba(0,0,0,.1)
  
  &:focus
    outline:none
    border:1px solid $lightgrey
    

textarea
  height:7em

body
  background: $paper
  color: $black
  font-size: 1em
  line-height: 1.4
  width: 100%
  overflow: hidden
  
#app
  width: 100%
  position: relative
  max-width: $maxWidth
  margin:0 auto

.subpage
  padding:1em
  .subpage-content
    background:white
    box-shadow:0 1px 1px rgba(0,0,0,.1)
    padding:1em
    


@import 'media-queries'