@import 'colors'

/*  TODO: use transform instead of left  */
.force-scrollbar
  padding: 0 1em 1em 1em
  height:100%
  
.filter-menu
  position:fixed
  height: auto
  top: 0
  border: 1px solid rgb(204, 204, 204);
  background: rgba(255, 255, 255, 0.95);
  border-top: none;
  box-shadow :none
  transition:top .2s
  width: 15em
  z-index: 6
  overflow: visible
  .close-menu-btn
    margin-top: 1em;
    background: #eee;
    padding: .2em;
    border-radius: 3px;
    text-align: center;
    cursor: pointer
    color: $grey
    font-size: .8em
    &:hover
      color: darken($grey, 10)
  &.active
    display: block
  
  .Select-control
    border-radius:2px
    margin:1em 0
    font-size:12px
  
  .Select-menu
    font-size:12px
  
  input
    font-size:12px
  
  .btn-close
    top: 1.2em
    right:.5em
    background:rgba(255,255,255,.3)
    border:none
    position:absolute
    font-size:2em
    cursor:pointer
    
    &:hover
      color:$red
    
  .filter-list
    margin-top: 1em
    
    .tag-list
      list-style: none
      padding: 0
      margin: .7em 0 2em 0
      overflow: auto
      
      li.filter
        cursor: pointer
        padding: .2em .5em
        user-select: none
        width: 100%
        font-size: .8em
        box-shadow: none
        border-radius: 2px
        &.active
          background: $lightgrey
          z-index:999
          
        &:hover.active
          background: $lightgrey
          
        i
          display: none
          float: right
          margin-top: .2em
          
        &:hover
          background: $lightgrey
          
        &.active i.icon_close
          display: block
  
  .filter-group
    .filter-header
      display: block
      cursor: pointer
      user-select: none
      font-weight: bold
      border-bottom: 1px solid $lightgrey
      padding: .5em 0
      i
        float: right
        transform: roate(0deg)
        transition: transform .5s
    .filter-content
      max-height: 0px
      overflow: hidden
      transition: max-height .5s
  .filter-group.expanded
    .filter-content
      display: block
      max-height: 300px
      overflow: auto
    .filter-content.select
      overflow: visible
      max-height: 50px
      .Select-menu
        position: absolute
    .filter-header
      i
        transform: rotate(180deg)