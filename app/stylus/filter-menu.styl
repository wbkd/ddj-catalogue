@import 'colors'

/*  TODO: use transform instead of left  */
.force-scrollbar
	overflow-y: auto
	padding: 0 1em 1em 1em
	height:100%
	
.filter-menu
	position:fixed
	left:-17.5em
	top:0
	height:100%
	background:white
	box-shadow :2px 0 2px rgba(0,0,0,0.1)
	transition:left .2s
	padding-top: 3em
	width: 17.5em
	z-index:6
	
	.btn-close
		top: 1.2em
		right:.5em
		background:rgba(255,255,255,.3)
		border:none
		position:absolute
		font-size:2em
		cursor:pointer
		
		&:hover
			color:$red

	&.active
		left:0
		
	.filter-list
		margin-top: 1em
		
		.tag-list
			list-style: none
			padding: 0
			margin: .7em 0 2em 0
			max-height: 12em
			overflow: auto
			
			li.filter
				cursor: pointer
				padding: .2em .5em
				user-select: none
				width: 100%
				font-size: .8em
				
				&.active
					background: $lightgrey
					box-shadow: 0 2px 3px rgba(0,0,0,.25)
					z-index:999
					
				&:hover.active
					background: $lightgrey
					box-shadow: 0 2px 3px rgba(0,0,0,.25)
					
				i
					display: none
					float: right
					margin-top: .2em
					
				&:hover
					background: $lightgrey
					box-shadow: 0 2px 2px rgba(0,0,0,.15)
					
				&.active i.icon_check
					display: block
					
				&.active:hover i.icon_close
					display: block
					
				&.active:hover i.icon_check
					display: none
								
		.filter-header
			font-weight: bold
			border-bottom: 1px solid $lightgrey