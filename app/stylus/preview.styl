@import 'colors'
@import 'mixins'

/**********
	
	preview list

***********/

.content-wrapper
	-moz-transition:transform .2s
	-webkit-transition:transform .2s
	transition:transform .2s

.preview-list
	padding-top:2em
	.selected-filters ul
		list-style: none
		padding: 1em
	li.filter
		float: left
		cursor: pointer
		padding: .2em .5em
		user-select: none
		-webkit-user-select: none
		-moz-user-select: none
		margin-right: 1em
		&.active
			background: $lightgrey
			box-shadow: 0 2px 3px rgba(0,0,0,.25)
			z-index:999
		&:hover.active
			background: $lightgrey
			box-shadow: 0 2px 3px rgba(0,0,0,.25)
		i
			display: none
			float: right
			margin-top: .2em
		&:hover
			background: $lightgrey
			box-shadow: 0 2px 2px rgba(0,0,0,.15)
		&.active i.icon_check
			display: block
		&.active:hover i.icon_close
			display: block
		&.active:hover i.icon_check
			display: none

.preview-list-header
	padding:1em
	
	.sorter
		float: right
		position: relative
		color:#777

		ul
			display:inline-block
			list-style:none
			
			li 
				cursor: pointer
				display:inline-block
				margin-left:.15em
				padding:.25em .5em
				userselect(none)
				&:hover, &.active
					background: $lightgrey
					
	.btn-filter
		float: left

		
.preview
	height:270px
	background: $white
	position: relative
	display:block
	color:$black		
	margin-top:1em
	
	.btn-group
		position:absolute
		right:0
		width:30px
		
	.btn
		opacity:.5
		transition: opacity .2s
		box-shadow: 0 1px 1px rgba(0,0,0,.05)
		padding:.5em .75em
		border-radius:100%
		font-size:12px
		margin-top:.5em
		background:none
		
		&:hover
			background: $lightgrey
			opacity:1
			box-shadow: 0 1px 1px rgba(0,0,0,.15)
	
	.preview-image
		background-position:center center
		background-size: cover
		height: 180px
		display:block
		cursor:pointer
		border:1px solid $lightgrey
		transition: box-shadow .1s;
		box-shadow: 0 3px 2px rgba(0,0,0,0)
		
		&:hover
			box-shadow: 0 3px 2px rgba(0,0,0,.2)
		
	.preview-content
		width:100%
		padding: .6em 45px .6em .5em
		font-size: .8em
		
		.preview-publisher
			color: #777
			
		.preview-description
			display:none
			margin:2em 0
			
	
	&.is-expanded
		height:auto
		position:absolute
		z-index:3
		
		.preview-content
			background:rgba(255,255,255,.9)
		
	&.is-expanded .preview-description
		display:block
		
	&.is-stared
		.btn-star
			color:#e67e22


/**********
	
	preview detail

***********/

.preview-detail-image
	height:14em
	width:100%
	background-repeat:no-repeat
	background-size:cover
	margin:1em 0 2em 0
	
.preview-detail-byline
	margin-bottom:2em