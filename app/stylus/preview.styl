/**********
	
	preview list

***********/

.preview-list-header
	padding:1em

.preview
	height:250px
	background:white
	box-shadow:0 2px 2px rgba(0,0,0,.25)
	cursor:pointer
	
	&:hover
		box-shadow:0 3px 10px rgba(0,0,0,.25)

	.preview-image
		background-position:center center
		height:150px
		
	.preview-content
		padding:.85em
		


/**********
	
	preview detail

***********/

.preview-detail-image
	height:14em
	width:100%
	background-repeat:no-repeat
	background-size:cover
	margin:1em 0 2em 0
	
.preview-detail-byline
	margin-bottom:2em