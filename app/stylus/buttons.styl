@import('colors')
@import('mixins')

.btn
	cursor: pointer
	display:inline-block
	background: $lightgrey
	padding:.25em .75em
	color: $darkgrey
	userselect(none)
	box-shadow:0 1px 2px rgba(0,0,0,.3)
	
.btn-dark
	background: $darkgrey
	color: $white

.btn-close
	position: absolute
	right: 0
	top: 0
	font-size: 2em
	cursor: pointer