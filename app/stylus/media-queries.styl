/*  media queries for larger screens  */

@media only screen and (min-width: 44em)
  header
    position: fixed
    width: 100%
    z-index: 10
    top: 0
    height: auto
    
    .header-title
      float:left
      width:auto
  
  nav 
    float:right
    
    .nav-item
      margin: 0 0 0 1em
      width:auto
      display:inline-block
  
  .btn 
    width: auto

  .preview-list-header
    .btn-filter
      float: left
      margin-bottom:0
      width:auto
        
    .count
      display:block
      line-height: 1.9em
      float:left
      margin-left:1em

    .preview-list-left
      float:left

    & > div
      float:left
      

  