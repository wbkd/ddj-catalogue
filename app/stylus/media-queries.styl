/*  media queries for larger screens  */

@media only screen and (min-width: 44em)
  .label
    display:inline

  header
    position: fixed
    width: 100%
    z-index: 10
    top: 0
    height: auto
    
  .header-spacing
    display:block
      
  .btn 
    width: auto
  
  .preview 
    height:270px
    
  .preview-list-header
    .btn-filter
      float: left
      margin-bottom:0
      width:auto
        
    .count
      display:block
      line-height: 1.9em
      float:left
      margin-left:1em

    .preview-list-left
      float:left

    & > div
      float:left
      

  