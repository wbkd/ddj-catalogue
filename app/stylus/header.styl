@import 'colors'

header
	background: $headerbg
	box-shadow:0 2px 3px rgba(0,0,0,.25)
	color: $white
	position: relative
	width: 100%
	top: 0
		
	.header-content
		padding: .5em 1em
		
	.menu-toggle
		margin-right: .5em
	
	.header-logo
		float: left
		width: 23px
		margin-top: 3px
		margin-right: 0.5em

	.header-title
		font-weight: bold
		width:100%
		float:left
		
		a
			color:$white
	.sub-menu
		width: 100%
		background: $black
		
		.btn-filter
			border: none
			background: none
			color: #FFF
			float: left
			padding: 0
			box-shadow: none
			i
				font-weight: bold
				font-size: 20px
				line-height:10px
				float: left
				display: block
				margin-top: 7px
				margin-right: 5px
			div.description
				float: left
		.selected-filters
			float: left
			list-style: none
			margin-left: 1em
			li.filter
				color: $white
				box-shadow: none
				background: none
				border: 1px solid
				border-color: $white
				border-radius: .3em
				font-size: .8em
				padding: .1em .5em
				i.icon_check
					display: none
				i.icon_close
					display: inline
.sorter
	float: right
	position: relative
	color: white
	font-size: .8em
	ul
		display:inline-block
		list-style:none
		
		li 
			cursor: pointer
			display:inline-block
			margin-left:.5em
			user-select:none
			padding: .1em .4em
			transition: border-color .5s
			border: 1px solid transparent
			border-radius: .3em

			&:hover, &.active
				border-color: $lightgrey
		
		.sorter-arrows
			display:none

		.sort-item.active

			.sorter-arrows
				display:inline-block
			
			i
				display:block
		
nav
	user-select:none

	.nav-item
		color: $white
		cursor: pointer
		font-size:14px
		text-transform:uppercase
		width:100%
		display:block
		margin-top:.5em

		&:hover
			color: $lightgrey
			
		i 
			margin-right:.4em
	.favorites-count
		background: white
		border-radius: 50%
		margin-left: 0.5em
		color: $headerbg
		font-weight: bold
		font-size: 0.7em
		display: inline-block
		height: 1.4em
		width: 1.4em
		line-height: 1.6em
		text-align: center